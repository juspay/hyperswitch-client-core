#!/bin/bash

Blue='\033[0;94m'
echo "${Blue}
      ▒▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▒ 
    ▒▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▒
  ▒▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▒
 ▒▓▓▓▓▓▓▓▓▓▓░░░▓▓▓▓▓▓▓░░░░░░░░▓▓▓▓▓▓░░░░░░▓▓▓▓▓▓▓▓▒
▒▓▓▓▓▓▓▓▓▓▓░░░░░▓▓▓▓▓▓░░░░░░░░▓▓▓▓▓░░░░░░░░▓▓▓▓▓▓▓▓▒
▒▓▓▓▓▓▓▓▓▓░░░░░░░▓▓▓▓▓░░░░░░░░▓▓▓▓▓░░░░░░░░▓▓▓▓▓▓▓▓▒
 ▒▓▓▓▓▓▓▓░░░░░░░░░▓▓▓▓░░░░░░░░▓▓▓▓▓▓░░░░░░▓▓▓▓▓▓▓▓▒
  ▒▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▒
    ▒▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▒
      ▒▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓▒
      
                  Hyperswitch
"

BRANCH_NAME=$(git branch | grep '*' | sed 's/* //')

if [[ $BRANCH_NAME != *"no branch"* ]]
then
  exec < /dev/tty && node_modules/.bin/git-cz --hook || true
fi

